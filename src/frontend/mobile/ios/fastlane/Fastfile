default_platform(:ios)

platform :ios do
  desc "ðŸ›  Build an IPA for Ad Hoc distribution"
  lane :build_ipa do
    build_ios_app(
      workspace: "KrachisSpaceApp.xcworkspace",
      scheme: "SpaceApp",
      export_method: "development",
      output_directory: "../build/ios",
      clean: true,
      xcargs: "-allowProvisioningUpdates",
      export_options: {
        method: "development",
        signingStyle: "automatic",
        teamID: "P65AA242M9"
      }
    )
  end
end
